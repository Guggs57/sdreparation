<h1>Finaliser ma commande</h1>

<div data-controller="cart">
  <div>
    <label>Prénom</label><br>
    <input type="text" data-cart-target="firstName" required>
  </div>

  <div>
    <label>Nom</label><br>
    <input type="text" data-cart-target="lastName" required>
  </div>

  <div>
    <label>Email</label><br>
    <input type="email" data-cart-target="email" required>
  </div>

  <div>
    <label>Téléphone</label><br>
    <input type="tel" data-cart-target="phone">
  </div>

  <hr>

  <div data-cart-target="display"></div>

  <button data-action="click->cart#checkout">Procéder au paiement</button>
</div>
