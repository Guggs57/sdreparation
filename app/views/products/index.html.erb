<h1>Nos produits</h1>

<div class="products-list">
  <% @products.each do |product| %>
    <%= link_to product_path(product), class: "product-card-link" do %>
      <div class="product-card">
        <div class="product-image">
          <%= image_tag(product.image_url.presence || "default_product.png", alt: product.name) %>
        </div>
        <div class="product-content">
          <h3><%= product.name %></h3>
          <p class="product-price"><%= number_to_currency(product.price) %></p>
          <p class="product-desc"><%= product.description %></p>

          <% if admin_signed_in? %>
            <div class="admin-actions">
              <%= link_to "Modifier", edit_admin_product_path(product), class: "btn btn-warning" %>
              <%= link_to "Supprimer", admin_product_path(product), method: :delete, data: { confirm: "Supprimer ce produit ?" }, class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
