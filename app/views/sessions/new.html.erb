<h1>Connexion Admin</h1>

<%= form_with url: session_path, method: :post do |f| %>
  <div>
    <%= label_tag :email %><br>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Connexion" %>
  </div>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>
